@{
  Layout = "_Layout";
}

@using Factory.Models
<h1>Machines</h1>
<hr />
<h3>List of Machines</h3>
@if(Model.Count == 0)
{
  <p>There are no Machines Yet!</p>
}
<ul>
@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new {id = machine.MachineId})</li>
}
</ul>
<div class="button-group">
  <p class="button margin-right">@Html.ActionLink("Add a Machine", "Create")</p> 
  <p class="button">@Html.ActionLink("Home", "Index", "Home")</p> 
</div>