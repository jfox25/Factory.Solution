@{
  Layout = "_Layout";
}

@using Factory.Models
<h1>Engineers</h1>
<hr />
<h3>List of Engineers</h3>
@if(Model.Count == 0)
{
  <p>There are no Engineers Yet!</p>
}
<ul>
@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.Name}", "Details", new {id = engineer.EngineerId})</li>
}
</ul>
<div class="button-group">
  <p class="button margin-right">@Html.ActionLink("Add an Engineer", "Create")</p> 
  <p class="button">@Html.ActionLink("Home", "Index", "Home")</p> 
</div>